{
    "manifest_version": 3,
    "name": "YouTube Audio Downloader",
    "version": "1.4",
    "permissions": [
        "activeTab",
        "downloads"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}
